
<!--index.wxml-->
<view class="container">
  <view class="top-bgcolor"> </view>
  <view class="main-box">
    <view class="content-box">
        <block wx:for="{{core}}" wx:key="id">
          <navigator url="{{'/pages/core/'+item.id+'/'+item.id}}" class="content-box-item" wx:if="{{remind !== '未绑定' && !item.disabled && (!user.is_teacher || !item.teacher_disabled) }}">
            <image class="core-item-icon" src="/images/core/{{item.id}}.png"></image>
            <text class="core-item-name">{{item.name}}</text>
          </navigator>
          <view wx:else class="content-box-item disabled" bindtap="disabled_item">
            <image class="core-item-icon" src="/images/core/{{item.id}}@disabled.png"></image>
            <text class="core-item-name">{{item.name}}</text>
          </view>
        </block>
      <view class="fix_tip {{disabledItemTap?'active':''}}">
        <text wx:if="{{remind == '未绑定'}}">请先绑定帐号</text>
        <text wx:else>该服务不可用</text>
      </view>
    </view>
    <view wx:if="{{remind}}" class="remind-box">
      <image wx:if="{{remind == '加载中'}}" class="remind-img" src="/images/index/loading.gif"></image>
      <block wx:else>
        <image class="remind-img" src="/images/index/nothing.png"></image>
        <text class="remind-text">{{remind}}</text>
        <navigator wx:if="{{remind == '未绑定'}}" url="/pages/more/login" class="remind-btn">前往绑定</navigator>
      </block>
    </view>
    <view class="content-box">
      <navigator url="url" class="tb-nav">
        <view class="tb">
          <text class="main-title">课表安排</text>
          <text class="more">MORE ></text>
        </view>
        <view class="tb-main">
          <view class="tb-content">
            <text class="tb-name">专业综合实训</text>
            <text class="tb-time">5-6节(14:00-15:40)</text>
          </view>
          <view class="tb-place">
            <text>教学楼1-305</text>
          </view>
        </view>
        <view class="tb-main">
          <view class="tb-content">
            <text class="tb-name">软件设计</text>
            <text class="tb-time">5-6节(14:00-15:40)</text>
          </view>
          <view class="tb-place">
            <text>教学楼1-305</text>
          </view>
        </view>
        <view class="tb-main">
          <view class="tb-content">
            <text class="tb-name">专业综合实训</text>
            <text class="tb-time">5-6节(14:00-15:40)</text>
          </view>
          <view class="tb-place">
            <text>教学楼1-305</text>
          </view>
        </view>
      </navigator>
    </view>
    <view class="content-box" wx-if="{{card.ykt.show}}">
      <navigator url="url" class="tb-nav">
        <view class="tb">
          <text class="main-title">一卡通</text>
          <text class="more">MORE ></text>
        </view>
        <view class="ykt-content">
          <image class="ykt-images" src="/images/index/card.png"></image>
          <view class="ykt-mains">
            <text>卡号：{{card.ykt.data.outid}}</text>
            <text>余额：{{card.ykt.data.balance}}元</text>
            <text>更新时间：{{card.ykt.data.last_time}}</text>
          </view>
        </view>
      </navigator>
    </view>
    <view wx:if="{{card.jy.show}}">
      <view class="current-type">
        <text class="yuan-dian"></text>
        <text class="jyjl">图书馆</text>
      </view>
      <scroll-view class="sc-filter" scroll-x="true">
        <view class="sc-view">
          <navigator class="library-jy" url="url">
            <image class="jy-images" src="/images/index/book.png"></image>
            <text class="jsk">图书证：{{card.jy.data.id}}</text>
            <text class="yjy">已借阅：{{card.jy.data.books_num}}本</text>
          </navigator>
        </view>
        <view class="sc-view">
          <navigator class="library-qf" url="url">
            <image class="jy-images" src="/images/index/qf.png"></image>
            <text class="jsk">欠费：{{card.jy.data.arrears_money}}元</text>
            <text class="yjy">时间：{{card.jy.data.lasttime}}</text>
          </navigator>
        </view>
        <view class="sc-view">
          <navigator class="library-more" url="url">
            <image class="jy-images" src="/images/index/findbook.png"></image>
            <text class="jsk">更多功能</text>
            <text class="yjy">敬请期待</text>
          </navigator>
        </view>
      </scroll-view>
    </view>
  </view>
  <view class="main-ending">
    <view class="main-ending-line"></view>
    <view class="main-ending-text">我是一个乖巧的结尾</view>
    <view class="main-ending-line"></view>
  </view>
</view>