/**jy.wxss**/

.container {
  background-color: #f7f7f7;
}

.user-jy {
  display: flex;
  background: #fefefe;
  border-bottom: 1rpx solid #eee;
}

.user-jy-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 11pt;
  line-height: 150%;
  height: 150rpx;
  padding: 20rpx;
  border-right: 1rpx solid #eee;
}

.user-jy-dbet {
  border: none;
}

.user-jy-hd {
  color: #777;
}

.user-jy-bd {
  display: flex;
  justify-content: center;
}

.user-jy-name {
  font-size: 25px;
  color: #73b4ef;
  font-weight: bold;
  line-height: 150%;
  padding: 19rpx 20rpx 0 30rpx;
}

.user-jy-value {
  font-size: 37px;
  color: #73b4ef;
  font-weight: bold;
  line-height: 150%;
  padding: 0 20rpx 0 30rpx;
}

.user-jy-text {
  color: #999;
  font-size: 14px;
  line-height: 200%;
  align-self: flex-end;
}

.book-list {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0rpx 30rpx 25rpx 30rpx;
}

.choose-type {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  padding: 10rpx 30rpx 0rpx 30rpx;
  margin: 10rpx 10rpx 0 10rpx;
}

.current-type {
  color: #fff;
  line-height: 200%;
  background-color: #62adf5;
  width: 25%;
  border-radius: 10px;
  font-size: 10pt;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0rpx 5rpx 15rpx 5rpx;
}

.yuan-dian {
  width: 10rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background-color: #fff;
}

.jyjl {
  padding-left: 10rpx;
}

.book-wraper {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  overflow: hidden;
  padding: 35rpx 30rpx 10rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 3px;
}

.book-name {
  font-size: 21px;
  line-height: 135%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #6a94cd;
}

.book-info {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 25rpx;
  font-size: 12px;
  color: #888;
}

.book-date {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 5rpx;
  font-size: 12px;
  color: #888;
}

.yhrq-value {
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.book-img {
  height: 13pt;
  width: 13pt;
  margin-top: 2pt;
  margin-right: 10rpx;
}
button {
  margin: 0;
  padding: 0;
}
.yjxj {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50rpx;
  box-shadow: 2px 2px 5px #999;
  background-color: #72adfa;
  position: fixed;
  left: 75%;
  top: 85%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.yjxj-check {
  background-color: #1f7bff;
}

.yjxj text {
  color: #fff;
  font-size: 14px;
  width: 30px;
  line-height:1.5;
}
