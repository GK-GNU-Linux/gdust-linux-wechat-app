
<!--cj.wxml-->
<view class="container">
  <view wx:if="{{remind}}" class="remind-box">
    <image wx:if="{{remind == '加载中'}}" class="remind-img" src="/images/index/loading.gif"></image>
    <block wx:else>
      <image class="remind-img" src="/images/index/nothing.png"></image>
      <text class="remind-text">{{remind}}</text>
    </block>
  </view>
  <block wx:else>
    <view class="cj-header">
      <view class="cj-text">
        <text class="cj-header-title">成绩查询</text>
        <!-- <text class="cj-header-info">学号：{{account}}</text>
        <text class="cj-header-info">姓名：{{real_name}}</text> -->
      </view>
      <image class="cj-bg" src="/images/core/cj.png"></image>
    </view>
    <view wx:for="{{cjDatas}}" wx:key="index">
      <view class="cj-info-ctn" wx:if="{{item.score.length>0}}">
      <view class="cj-grade">
        <view class="cj-grade-term">
          <view class="cj-grade-fst">
            <text>{{item.year + '年第' + item.term +'学期'}}</text> <!--学年学期 e.g 2021-2022 第一学期-->
          </view>
        </view>
        <view class="cj-grade-info">
        </view>
      </view>
      <view class="cj-info-box">
        <view class="cj-info" wx:for="{{item.score}}" wx:key="courseid">
          <text class="cj-info-name">{{item.lesson_name}}</text>
          <view class="cj-info-socre-box">
            <text class="cj-info-socre">学分：{{item.credit ? item.credit: '暂无'}}</text>
            <text class="cj-info-socre">|</text>
            <text class="cj-info-socre"> 绩点：{{item.grade_point ? item.grade_point: '暂无'}}</text>
            <!-- <text class="cj-info-socre"> 卷面分：{{item.qmcj ? item.qmcj: '暂无'}}</text> -->
            <text class="cj-info-socre">|</text>
            <text class="cj-info-socre{{item.score < 60?'-red':''}}">综合成绩：{{item.score}}</text>
          </view>
          <view class="cj-info-socre-box" wx:if="{{item.bkcj}}">
            <text class="cj-info-socre"></text>
            <text class="cj-info-socre"></text>
            <text class="cj-info-socre"></text>
            <text class="cj-info-socre"></text>
            <text class="cj-info-socre-red">补考成绩：{{item.bkcj}}</text>
          </view>
        </view>
      </view>
    </view>
    </view>
    <view wx:if="{{update_time}}" class="cj-footer">
      <text>更新时间：{{update_time}}</text>
    </view>
  </block>
</view>
<view class="round-btn" >
  <image style="width: 50%;height: 50%;" data-add="300" bindtap="scrollTo" src="/images/core/down.png"></image>
</view>
<view class="round-btn" data-top="0" bindtap="scrollTo" wx:if="{{onReachBottom}}">
  <image style="width: 50%;height: 50%;transform: rotate(180deg);" src="/images/core/down.png"></image>
</view>
