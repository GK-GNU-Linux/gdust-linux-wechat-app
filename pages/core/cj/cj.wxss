/**cj.wxss**/

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #f7f7f7;
}

.cj-header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 0;
}

.cj-text {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  padding-left: 25rpx;
}

.cj-header-title {
  font-size: 20pt;
  font-weight: bold;
  line-height: 150%;
  margin-bottom: 15rpx;
  color: #222;
}

.cj-header-info {
  font-size: 11pt;
  line-height: 160%;
  color: #888;
}

.cj-bg {
  display: block;
  width: 200rpx;
  height: 200rpx;
  padding-right: 5rpx;
  opacity: 0.3;
}

.cj-info-ctn {
  display: flex;
  flex-flow: column nowrap;
  align-items: stretch;
  border-radius: 3px;
  background: #fff;
  margin-bottom: 20rpx;
}

.cj-grade {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  padding: 25rpx 30rpx;
}

.cj-grade-logo {
  width: 100rpx;
  height: 100rpx;
}

.cj-grade-term {
  flex: 1;
  color: #666;
  font-size: 15pt;
  font-weight: 600;
  line-height: 160%;
  text-align: center;
  padding-bottom: 10rpx;
}

.cj-grade-fst {
  display: flex;
  flex-flow: column nowrap;
}

.cj-grade-jd {
  background-color: #ffcb63;
  border-radius: 10px;
  color: #fff;
  padding: 0rpx 30rpx;
  line-height: 160%;
}

.grade-comment {
  color: #999;
  font-size: 26rpx;
}

.cj-info-box {
  display: flex;
  flex-flow: column nowrap;
  align-items: stretch;
  padding: 5rpx 30rpx 15rpx;
}

.cj-info {
  background: #fff;
  font-size: 11pt;
  display: flex;
  flex-flow: column wrap-reverse;
  justify-content: space-between;
  border-top: 1px solid #eee;
  padding: 25rpx 20rpx 20rpx 20rpx;
}

.cj-info-name {
  font-size: 12pt;
  font-weight: 600;
}

.cj-info-socre-box {
  display: flex;
  flex-flow: row nowrap;
  padding-top: 13rpx;
  justify-content: space-between;
}

.cj-info-socre {
  font-size: 10pt;
  align-items: center;
  color: #999;
}

.cj-footer {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  color: #999;
}
