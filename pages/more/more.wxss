/**more.wxss**/
.container{
  background-color: #f6f6f6;
  padding: 0;
}
.top-bgcolor {
  width: 100%;
  height: 160rpx;
  background-color: #079df2;
}
.user-info-box {
  width: 95%;
  height: 270rpx;
  margin: 0 auto -30rpx auto;
  border: 1px solid #e5e5e5;
  border-radius: 5px;
  box-shadow: 2px 2px 5px #e5e5e5;
  background-color: #fff;
  position: relative;
  top: -60rpx;
}
.user-image{
  width: 120rpx;
  height: 120rpx;
  border: 2px solid #fff;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  margin-left: -2.5em;
  top: -60rpx;
  display: block;
  overflow: hidden;
}
.user-name {
  position: absolute;
  width: 100%;
  top: 80rpx;
  font-size: 14pt;
  color: #5d9e9d;
  font-family: '微软雅黑';
  letter-spacing: 5px;
  text-align: center;
}
.user-infos {
  position: absolute;
  width:100%;
  display: flex;
  top: 150rpx;
}
.info1,.info2,.info3 {
  flex: 1;
  text-align: center;
  color: #6d6d6d;
  font-size: 11pt;
  font-family: '华文细黑';
}
.xuehao,.xibie,.banji {
  margin-bottom: 15rpx;
  font-family: '微软雅黑';
}
.more-info {
  width: 95%;
  margin: 0 auto 30rpx auto;
  border-radius: 10rpx;
  border: 1px solid #e5e5e5;
  box-shadow: 2px 2px 5px #e5e5e5;
}
.more-info-btn {
  display: flex;
  min-height: 85rpx;
  align-items: center;
  background-color: #fff;
  font-size: 11pt;
  font-family: '微软雅黑';
  padding: 0 30rpx;
  border-radius: 10rpx;
  border-bottom: 1px solid #e5e5e5;
}
.btn-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}
.btn-text {
  flex: 1;
}
.user-info {
  display: flex;
  flex-direction: column;
  margin: 30rpx 0 -1px;
  padding: 25rpx 30rpx 20rpx;
}
.login-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #e55c5c;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  width: 95%;
  margin: 0 18rpx 30rpx 18rpx;
  position: absolute;
  bottom: 0;
  font-family: '微软雅黑';
}
.btn-enter {
  width: 18rpx;
  height: 27rpx;
}

@media only screen and (max-device-height: 465px) {
  .login-btn {
    font-size: 13pt;
    line-height: 85rpx;
    height: 85rpx;
    background: #e55c5c;
    color: #fff;
    text-align: center;
    border-radius: 5px;
    width: 95%;
    display: block;
    margin: 30rpx 18rpx;
    position: static;
    font-family: '微软雅黑';
  }
}


